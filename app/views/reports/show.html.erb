<%= content_for :title, @report.title %>
<div class="report-container">
  <div class="cover-container">
    <%= image_tag(@report.imgcover.url(:normal), class: "main-img-report")%>
    <h1 class="title-report"><%= @report.title%></h1>
  </div>
  <div class="content-report">
    <div class="side-sponsors">
      <p class="side-author">por <%= @report.author.name %></p>
      <p class="side-place"><%= @report.place%> <%= @report.date.to_time.strftime('%m.%d.%y')%></p>
      <!--<ul>
        <li>Sponsor 1</li>
        <li>Sponsor 2</li>
        <li>Sponsor 3</li>
        <li>Sponsor 4</li>
      </ul>-->
    </div>
    <div class="report-body">
      <div class="subtitletxt">
        "<%= @report.subtitle %>"
      </div>
      <div class="report-text">
        <%= @report.body.html_safe%>
      </div>
    </div>

  </div>
</div>
