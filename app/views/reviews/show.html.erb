<%= content_for :title, @review.name %>

<div class="review-container">
  <div class="disc-container">
    <div class="disc-card">
      <div class="img-rr">
        <div class="img-review">
          <%= image_tag(@review.img.url(:normal))%>
          <div class="data-disc">
            <p><%= @review.artist.name%></p>
            <p><%= @review.place %></p>
            <p>Fav Tracks:</p>
            <ul>
              <li><%= @review.fav1%></li>
              <li><%= @review.fav2%></li>
              <li><%= @review.fav3%></li>
            </ul>
          </div>
        </div>
        <div class="revfreq"><%= image_tag(@review.category.img.url(:normal))%></div>
      </div>
      <div class="title-review">
        <h1><%= @review.name%></h1>
        <p class="artist-name"><%= @review.artist.name%></p>
        <p class="topyear">(<%=@review.year%>)</p>
        <p class="autorrev">por: <%= @review.author.name%></p>
        <p class="daterev"><%=@review.date.to_time.strftime("%d.%b.%Y")%></p>
      </div>
    </div>
  </div>
  <div class="content-review">
    <div class="side-titles">
      <div class="social-links">
        <a href="https://www.facebook.com/altostonosec/" class="fa fa-facebook"></a>
        <a href="#" class="fa fa-twitter"></a>
        <a href="https://www.instagram.com/altostonos/" class="fa fa-instagram"></a>

      </div>
    </div>
    <div class="review-body">
      <div class="review-text">
        <%= @review.body.html_safe%>
      </div>
    </div>

  </div>
</div>
