      <div class="img-review">
        <%= image_tag(@review.img.url(:normal))%>
        <div class="data-disc">
          <p>La Maquina Camaleon</p>
          <p>Ecuador</p>
          <p>Fav Tracks:</p>
          <ul>
            <li>Facetas</li>
            <li>Hoy</li>
            <li>El amuleto</li>
          </ul>
        </div>
      </div>
      <div class="revfreq">freqqq</div>
      <div class="title-review">
        <h1><%= @review.name%></h1>
        <p>La Maquina Camaleon</p>
        <p class="topyear">(1968)</p>
        <p class="autorrev">por: Autor</p>
        <p class="daterev">09.02.2018</p>
